<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean id="people" class="People">
        <property name="name" value="小王"></property>
    </bean>

    <bean id="dog" class="Dog">
        <constructor-arg index="0" value="大黄"></constructor-arg>
    </bean>
    <bean id="dog2" class="Dog">
        <constructor-arg index="0" value="旺财"></constructor-arg>
    </bean>

    <bean id="cat2" class="Cat">
        <constructor-arg index="0" value="小花"></constructor-arg>
    </bean>
</beans>